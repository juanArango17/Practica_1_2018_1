<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.programacionmoviles.juanpabloarangoa.calculadora.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:textColor="@color/black"
            android:id="@+id/editor"
            />
    </LinearLayout>
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TableRow
            android:layout_weight="1">
            <Button
                android:background="@color/limegreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/one"
                android:id="@+id/bOne"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/two"
                android:id="@+id/bTwo"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/three"
                android:id="@+id/bThree"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/plus"
                android:id="@+id/bPlus"
                android:onClick="buttonOperation"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/four"
                android:id="@+id/bFour"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/five"
                android:id="@+id/bFive"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/six"
                android:id="@+id/bSix"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/minus"
                android:id="@+id/bMinus"
                android:onClick="buttonOperation"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/seven"
                android:id="@+id/bSeven"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/eight"
                android:id="@+id/bEight"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/nine"
                android:id="@+id/bNine"
                android:onClick="buttonNumber"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/multi"
                android:id="@+id/bMulti"
                android:onClick="buttonOperation"
                />
        </TableRow>

        <TableRow
            android:layout_weight="1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/dot"
                android:id="@+id/bDot"
                android:onClick="buttonDot"
                />

            <Button
                android:id="@+id/bZero"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/limegreen"
                android:onClick="buttonNumber"
                android:text="@string/zero"
                android:textAllCaps="false" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/limegreen"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/equal"
                android:id="@+id/bEqual"
                android:onClick="buttonEqual"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@color/limegreen"
                android:text="@string/div"
                android:id="@+id/bDiv"
                android:onClick="buttonOperation"
                />
            <!--
            falta!!!!
            -->
        </TableRow>


    </TableLayout>


</LinearLayout>
