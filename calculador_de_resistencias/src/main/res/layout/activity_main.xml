<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.programacionmoviles.juanpabloarangoa.calculador_de_resistencias.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:gravity="center">

        <ImageView
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:src="@drawable/resistor1" />

        <TextView
            android:id="@+id/tFranja1"
            android:layout_width="13sp"
            android:layout_height="57sp"
            android:background="@color/black"
            />

        <ImageView
            android:layout_width="10sp"
            android:layout_height="57sp"
            android:src="@drawable/resistor2"/>

        <TextView
            android:id="@+id/tFranja2"
            android:layout_width="13sp"
            android:layout_height="57sp"
            android:background="@color/black"/>

        <ImageView
            android:layout_width="10sp"
            android:layout_height="57sp"
            android:src="@drawable/resistor2"/>

        <TextView
            android:id="@+id/tFranja3"
            android:layout_width="13sp"
            android:layout_height="57sp"
            android:background="@color/black"/>

        <ImageView
            android:layout_width="39sp"
            android:layout_height="57sp"
            android:src="@drawable/resistor3"/>

        <TextView
            android:id="@+id/tFranja4"
            android:layout_width="13sp"
            android:layout_height="57sp"
            android:background="@color/black"
            />

        <ImageView
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:src="@drawable/resistor4"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/sFranja1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp">
            </Spinner>
            <Spinner
                android:id="@+id/sFranja2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp">
            </Spinner>
            <Spinner
                android:id="@+id/sFranja3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp">
            </Spinner>
            <Spinner
                android:id="@+id/sFranja4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/bCalcular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/peru"
                android:text="Calcular"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:onClick="onClickListener"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_margin="20dp"/>


    </LinearLayout>

</ScrollView>